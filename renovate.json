{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": [
        "^Dockerfile$"
      ],
      "matchStrings": [
        "ARG GENMON_VERSION=(?<currentValue>.*?)\n"
      ],
      "depNameTemplate": "jgyates/genmon",
      "datasourceTemplate": "github-releases",
      "versioningTemplate": "loose"
    }
  ]
}
